<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JellyPinApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/button_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_color</item>
        <item name="colorOnSurface">@color/text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/backgroundColorMain</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/Text.Normal.Small</item>
        <item name="android:textAppearanceMedium">@style/Text.Title</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/acme_edited</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
    <style name="DialogTheme_transparent" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">49%</item>
    </style>
    <style name="Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText</item>
        <item name="boxStrokeColor">@drawable/selector_stroke</item>
    </style>
    <style name="Widget.MaterialComponents.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="ThemeOverlay.App.TextInputEditText" parent="">
        <item name="colorPrimary">@color/text_color</item>
    </style>

    <style name="Base.V7.Widget.AppCompat.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingTop">24dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@drawable/toolbar_gradient</item>
    </style>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/toolbar_text_color</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="fontFamily">@font/acme_edited</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/acme_edited</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Body.LightSurface" parent="Text.Body">
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="Text.Body.Small" parent="Text.Body">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Body.Small.LightSurface" parent="Text.Body">
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="Text.Body.Medium" parent="Text.Body">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text.Title" parent="Text.Body">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Text.Normal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Normal.Small" parent="Text.Normal">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/acme_edited</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>